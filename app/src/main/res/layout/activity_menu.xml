<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu"
    android:background="@color/ArkaPlan">
    <ImageButton
        android:id="@+id/Resim"
        android:layout_width="211dp"
        android:layout_height="139dp"
        android:background="@drawable/animals"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="100dp"
        />
    <EditText
        android:id="@+id/KullanıcıAdı"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:hint="Kullanıcı Adı"
        android:layout_marginHorizontal="50dp"
        />
    <EditText
        android:id="@+id/Parola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:hint="Parola"
        android:layout_marginHorizontal="50dp"
        android:inputType="textPassword"
        />
    <CheckBox
        android:id="@+id/şifregöster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="Şifre Göster / Gizle"
        />

    <Button
        android:id="@+id/girisyap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="30dp"
        android:text="Giriş Yap"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kayıtol"
        android:text="Kayıt Ol"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="100dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sifremiunuttum"
        android:text="ŞİFREMİ UNUTTUM"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="100dp"
        />
</LinearLayout>